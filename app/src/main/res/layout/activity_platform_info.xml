<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <TextView
            android:id="@+id/prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="350dp"
            android:gravity="center"
            android:text="X"
            android:textSize="50dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="선택하신 이용권은"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:id="@+id/platform_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gual_yellow"
            android:textSize="35dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="결제 예정 금액은"
            android:textSize="25dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/platform_price"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text=""
                android:textSize="25dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text=" / 4 = "
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/platform_price_result"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text=""
                android:textSize="25dp">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="원 입니다."
            android:textSize="25dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:gravity="center
">

            <Button
                android:id="@+id/matching_start_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/gual_pink"
                android:gravity="center"
                android:text="매칭 시작"
                android:textSize="20dp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>